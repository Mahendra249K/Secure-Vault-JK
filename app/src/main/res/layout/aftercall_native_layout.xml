<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/llPhoto"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/bord_1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">

            <ImageView
                android:id="@+id/ivLlPhoto"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/gallery_4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvLlPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/Photos"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVideo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_weight="1"
            android:background="@drawable/bord_2"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">

            <ImageView
                android:id="@+id/ivLlVideo"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/icm_video" />

            <TextView
                android:id="@+id/tvLlVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/Videos"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFiles"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_14sdp"

            android:layout_weight="1"
            android:background="@drawable/bord_3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">

            <ImageView
                android:id="@+id/ivLlFiles"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/icm_file" />

            <TextView
                android:id="@+id/tvLlFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/Files"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/linShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_8sdp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_info_about_us" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Others indentify this number"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="share your experience"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

