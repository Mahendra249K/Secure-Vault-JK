<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_light"
    android:layout_margin="@dimen/dim_5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim_2"
    android:paddingTop="@dimen/dim_10"
    android:paddingRight="@dimen/dim_2"

    android:paddingBottom="@dimen/dim_5">

    <ImageView
        android:id="@+id/iv_album_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dim_5"
        android:gravity="start"
        android:lines="1"
        android:text="Screenshots"
        android:textColor="@color/wooden_dark_text"
        android:textSize="@dimen/sip_12" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dim_4"
        android:gravity="start"
        android:lines="1"
        android:text="25 item"
        android:textColor="@color/wooden_dark_text"
        android:textSize="@dimen/sip_12" />
</LinearLayout>