<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialogue_bg"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:id="@+id/frm_root">

        <ImageView
            android:id="@+id/media_thumbnail"
            android:layout_width="@dimen/_40sdp"
            android:src="@drawable/vi_other"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <com.hidefile.secure.folder.vault.cluecanva.VTv
                android:id="@+id/tv_filename"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:text="adab"
                android:maxLines="2"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <com.hidefile.secure.folder.vault.cluecanva.VTv
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:text="adab"
                android:textSize="@dimen/_11sdp"
                android:layout_gravity="center"
                android:textColor="@color/green_full_dark" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_chek"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="5dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/_8sdp" />

</LinearLayout>