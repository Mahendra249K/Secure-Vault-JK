<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="HomeTm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/homeTm</item>
    </style>

    <style name="question_status" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/green_mid_dark</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
